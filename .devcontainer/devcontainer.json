{
  "name": "Alpine",
  "image": "mcr.microsoft.com/devcontainers/base:alpine-3.20",
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "GitHub.copilot",
        "redhat.vscode-yaml",
        "mads-hartmann.bash-ide-vscode"
      ]
    }
  },
  "onCreateCommand": "sudo apk add ruby && sudo apk add shellcheck && sudo apk add shfmt"
}
