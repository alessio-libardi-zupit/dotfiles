[init]
	defaultBranch = main

[core]
	editor = code --wait

[diff]
	tool = code --wait --diff $LOCAL $REMOTE

[push]
	autoSetupRemote = true

[alias]
  main = !bash -c 'source $HOME/.bash_functions && git_main'
  draft = "!bash -c 'source \"$HOME/.bash_functions\" && git_draft \"$@\"' -"

